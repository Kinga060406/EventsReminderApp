@{
    Calendar calendar = new Calendar(DateTime.Now);
}

<!DOCTYPE html>
<html>
<head>
    <title>Kalendarz</title>
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
        }

        .header {
            color: white;
            padding: 15px;
            text-align: center;
        }

        .container {
            text-align: center;
            padding: 20px;
        }

        table {
            border-collapse: collapse;
            margin-bottom: 20px;
            width: 70%;
            max-width: 800px;
            margin: 0 auto;
        }

        th, td {
            border: 1px solid black;
            padding: 20px;
            text-align: center;
            font-size: 20px;
        }

        .current-day {
            background-color: #007bff;
        }

        .button-container {
            text-align: center;
            margin-top: 20px;
        }

        .button {
            display: inline-block;
            background-color: #007bff;
            color: white;
            padding: 15px 30px;
            border-radius: 10px;
            cursor: pointer;
            margin-right: 20px;
            border: none;
            font-size: 18px;
        }

            .button:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="header">
        <h1>Kalendarz</h1>
    </div>
    <div class="container">
        <h2>@calendar.FirstDayOfMonth.ToString("MMMM yyyy")</h2>
        <table>
            <tr>
                <th>Pon</th>
                <th>Wt</th>
                <th>Śr</th>
                <th>Czw</th>
                <th>Pt</th>
                <th>Sob</th>
                <th>Niedz</th>
            </tr>
            @for (int i = 0; i < calendar.NumRows; i++)
            {
                <tr>
                    @for (int j = 0; j < 7; j++)
                    {
                        int index = i * 7 + j;
                        DateTime day = calendar.DaysOfMonth[index];
                        if (day != DateTime.MinValue)
                        {
                            bool isCurrentDay = (day.Date == DateTime.Now.Date);
                            string cellClass = isCurrentDay ? "current-day" : "";
                            <td class="@cellClass">@day.Day</td>
                        }
                        else
                        {
                            // Sprawdź, czy to jest ostatni tydzień i czy wszystkie kolejne dni są puste
                            bool isLastWeek = (i == calendar.NumRows - 1);
                            bool isAllCellsEmpty = calendar.DaysOfMonth.GetRange(index, 7 - j).All(d => d == DateTime.MinValue);
                            if (!isLastWeek || !isAllCellsEmpty)
                            {
                                <td></td>
                            }
                        }
                    }
                </tr>
            }
        </table>

        <div class="button-container">
            <button class="button" onclick="goToPreviousMonth()">Poprzedni miesiąc</button>
            <button class="button" onclick="goToNextMonth()">Następny miesiąc</button>
        </div>
    </div>

    <!-- Scripts -->
</body>
</html>
